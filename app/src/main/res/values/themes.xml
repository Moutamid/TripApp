<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SQLApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>


    </style>

    <style name="BottomNavigation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>
    <style name="ErrorInHintTextInputDisable">
        <item name="android:textColorHint">#818181</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="maxLines">1</item>
        <item name="android:paddingTop">4.5dp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="background">@null</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ErrorInHintTextInput">
        <item name="android:textColorHint">#818181</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="maxLines">1</item>
        <item name="android:paddingTop">9.5dp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="background">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingEnd">16dp</item> <!-- Added padding end -->
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:textColorHint">#818181</item>
        <item name="height">50dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#ffffff</item>
    </style>

    <style name="Theme.SQLApp" parent="Base.Theme.SQLApp" />
</resources>