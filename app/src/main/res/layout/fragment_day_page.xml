<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
android:layout_marginTop="150dp"    android:layout_height="match_parent">

    <!-- Date TextView -->
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:text="DD/MM/YYYY"
        android:textSize="16sp" />

    <!-- Time Slot RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timeSlotRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/dateTextView"
        android:layout_marginBottom="16dp" />

    <!-- Current Time Marker -->
    <TextView
        android:id="@+id/currentTimeMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/timeSlotRecyclerView"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:text="Current Time"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
