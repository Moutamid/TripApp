<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shore_1"
    tools:context=".activities.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lyt"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/scriptin"
            android:text="Discover Mauritius"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/lyt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="35dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="explore"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/square_box"
                            android:padding="18dp"
                            android:src="@drawable/luggage_2" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Explore"

                            android:textColor="#000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="my_trips"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/square_box"
                            android:padding="18dp"
                            android:src="@drawable/my_trip_2" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="My Trips"

                            android:textColor="#000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="iternties"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/square_box"
                            android:padding="18dp"
                            android:src="@drawable/itinerary_4" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Itineraries"

                            android:textColor="#000"
                            android:textSize="13dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/tips"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="tips"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/square_box"
                            android:padding="18dp"
                            android:src="@drawable/trip_tips_1" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Trips Tips"

                            android:textColor="#000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/square_box"
                            android:padding="18dp"
                            android:src="@drawable/eat_2" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Eat"

                            android:textColor="#000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/square_box"
                            android:padding="18dp"
                            android:src="@drawable/hotel_1" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Stay"

                            android:textColor="#000"
                            android:textSize="13dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/square_box"
                            android:padding="18dp"
                            android:src="@drawable/activities_1" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Activities"

                            android:textColor="#000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/square_box"
                            android:padding="18dp"
                            android:src="@drawable/tours" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Tours"

                            android:textColor="#000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="organier"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/square_box"
                            android:padding="18dp"
                            android:src="@drawable/organizer" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Organizer"

                            android:textColor="#000"
                            android:textSize="13dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:onClick="contact_us"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="contact_us"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/square_box"
                            android:padding="18dp"
                            android:src="@drawable/contact_5" />

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Contact Us"

                            android:textColor="#000"
                            android:textSize="13dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="about"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/square_box"
                            android:padding="18dp"
                            android:src="@drawable/info_2" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="App info"

                            android:textColor="#000"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="login"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/square_box"
                            android:padding="18dp"
                            android:src="@drawable/my_account" />

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Login"
                            android:textColor="#000"
                            android:textSize="13dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Account"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"

            android:onClick="menu"
            android:src="@drawable/close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Status: Free"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_regular"
            android:onClick="premium"
            android:text="Purchase Premium Version"
            android:textColor="@color/app_color"
            android:textSize="13dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/premium_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_lyt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"

        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/lexend_medium"
            android:gravity="center"
            android:text="Discover Mauritius Premium"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/close"
            app:tint="@color/black"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-22dp"
            android:layout_marginEnd="20dp"
            android:onClick="BackPress"
            android:src="@drawable/close" />

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/slider"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorEnabled="true"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5C79FF"
            app:sliderIndicatorUnselectedColor="#D9D9D9"
            app:sliderScrollTimeInSec="1"
            app:sliderStartAutoCycle="false"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp" />


        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Discover Mauritius Premium"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Discover Mauritius Premium"
            android:textColor="#7F7F7F"
            android:textSize="11dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="GET ACCESS TO ALL THE PREMIUM TRAVEL TOOLS"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="#F5F8FD"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="10dp"

            android:paddingEnd="20dp">

            <RelativeLayout
                android:id="@+id/lifetime_premium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lexend_semi_bold"
                    android:text="Lifetime"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/lexend_semi_bold"
                    android:text="$2.99"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/editBoxFG" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_light"

                    android:text="Already purchased?"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/restore_purchase"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"

                    android:fontFamily="@font/lexend_light"
                    android:text="Restore purchase"
                    android:textColor="@color/app_color"
                    android:textSize="12dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/editBoxFG" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_light"
                    android:gravity="center"
                    android:text="Have questions about your purchase? Read our"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/faq_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_light"
                    android:gravity="center"
                    android:text=" FAQ."
                    android:textColor="@color/app_color"
                    android:textSize="10dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/faq_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_lyt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:id="@+id/close_faq"
            app:tint="@color/black"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="20dp"
            android:onClick="BackPress"
            android:src="@drawable/close" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_regular"

            android:text="I have previously purchased the Pro Version of Pro Mauritius, do I need to pay for the app again?"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_regular"

            android:text="If you have previously purchased the full version of Pro Mauritius on your Google Play account, you can still unlock the premium features by clicking “Restore Purchase” while logged into that account."
            android:textColor="#7F7F7F"
            android:textSize="14dp" />


    </LinearLayout>
</RelativeLayout>